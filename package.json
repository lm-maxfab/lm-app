{
  "name": "my-vite-preact-ts-app",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint .",
    "preload": "node ./scripts/preload.mjs",
    "dev": "node ./scripts/dev.mjs && vite",
    "build": "node ./scripts/build.mjs",
    "analyze": "source-map-explorer 'build/assets/*.js'",
    "serve": "vite preview"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "preact": "^10.5.13",
    "react-slick": "^0.28.1",
    "slick-carousel": "^1.8.1",
    "smoothscroll-polyfill": "^0.4.4",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.0.0",
    "@types/node": "^16.9.0",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "async-prompt": "^1.0.1",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard-ts": "^20.0.1",
    "jsdom": "^17.0.0",
    "moment": "^2.29.1",
    "node-fetch": "^3.0.0",
    "pretty": "^2.0.0",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.3.2",
    "vite": "^2.5.4"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/build",
      "/node_modules",
      "/vite.config.ts",
      "/src/custom.d.ts",
      "/src/preact.d.ts",
      "/src/preload.ts",
      "/src/vite-env.d.ts",
      "/static"
    ],
    "extends": [
      "react-app",
      "standard-ts"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/triple-slash-reference": "off",
      "@typescript-eslint/lines-between-class-members": "off",
      "react/jsx-closing-bracket-location": "off",
      "operator-linebreak": "off"
    }
  }
}
