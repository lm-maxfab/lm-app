{
  "name": "my-vite-preact-ts-app",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint .",
    "predev": "node ./scripts/predev.mjs",
    "dev": "vite",
    "start": "npm run dev",
    "build": "node ./scripts/build.mjs"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "preact": "^10.5.13",
    "react-slick": "^0.28.1",
    "slick-carousel": "^1.8.1",
    "smoothscroll-polyfill": "^0.4.4",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-modules-umd": "^7.14.5",
    "@preact/preset-vite": "^2.0.0",
    "@types/node": "^16.9.0",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "async-prompt": "^1.0.1",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard-ts": "^20.0.1",
    "fs-extra": "^10.0.0",
    "jsdom": "^17.0.0",
    "moment": "^2.29.1",
    "node-fetch": "^3.0.0",
    "pretty": "^2.0.0",
    "prompts": "^2.4.2",
    "sass": "^1.43.4",
    "source-map-explorer": "^2.5.2",
    "terser": "^5.10.0",
    "typescript": "^4.3.2",
    "vite": "^2.5.4",
    "zip-dir": "^2.0.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/build",
      "/node_modules",
      "/vite.config.ts",
      "/src/custom.d.ts",
      "/src/preact.d.ts",
      "/src/preload.ts",
      "/src/vite-env.d.ts",
      "/static"
    ],
    "extends": [
      "react-app",
      "standard-ts"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/triple-slash-reference": "off",
      "@typescript-eslint/lines-between-class-members": "off",
      "react/jsx-closing-bracket-location": "off",
      "operator-linebreak": "off"
    }
  }
}
